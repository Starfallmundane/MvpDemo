<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="网络请求数据--轮播图（get）" />

        <Button
            android:id="@+id/bt_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="网络请求数据--资讯列表(post)" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="网络请求数据--登陆(post)" />

        <Button
            android:id="@+id/bt_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="网络请求数据--资讯详情(post，更高阶封装)" />

        <Button
            android:id="@+id/bt_eventbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="eventbus发送数据" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="请求结果："
            android:textColor="@color/text_black"
            android:textSize="16dp" />


        <Button
            android:id="@+id/bt_bigpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="放大图" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@mipmap/details_article_share"
                android:drawablePadding="0dp"
                android:padding="15dp"
                android:text="请求结果："
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@mipmap/details_article_share"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:text="请求结果："
                android:textColor="@color/text_black"
                android:textSize="16dp" />
        </LinearLayout>


        <Button
            android:id="@+id/bt_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="15dp"
            android:text="文件上传和下载"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="15dp"
            android:text="列表刷新和加载更多"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_huiyuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/green"
            android:gravity="center"
            android:padding="15dp"
            android:text="马蜂窝会员滚动效果"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="15dp"
            android:text="倒计时"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>